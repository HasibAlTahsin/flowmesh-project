groups:
  - name: example-alerts
    rules:
      - alert: HighCpuUsage
        expr: avg(rate(process_cpu_seconds_total[1m])) by (job) > 0.8
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "High CPU usage detected"
          description: "CPU usage for {{ $labels.job }} is > 80% for more than 2 minutes"
